.photo-con {
  width: 100%;
  height: 100vh;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.7);
}

.photo-con .vertify-con {
  width: 100%;
  height: 1000rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.photo-con .vertify-con .camera-con {
  width: 687rpx;
  height: 158rpx;
  position: absolute;
  top: 100rpx;
  left: 31rpx;
  border: 3rpx dotted #ffffff;
  border-radius: 20rpx;
}

.camera-img {
  width: 687rpx;
  height: 158rpx;
  position: absolute;
  top: 100rpx;
  left: 31rpx;
  border: 3rpx dotted #ffffff;
  border-radius: 20rpx;
}

.photo-con .vertify-con .tip {
  width: 474rpx;
  height: 28rpx;
  position: absolute;
  top: 300rpx;
  left: 130rpx;
  background-image: url("https://yun.duiba.com.cn/aurora/assets/aa92c06be10cec81e3f44153a87b4dca3f6a73ec.png");
  background-size: 474rpx 28rpx;
  background-repeat: no-repeat;
}

.photo-con .vertify-con .vertify-btn {
  width: 392rpx;
  height: 84rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 550rpx;
  background-image: url("https://yun.duiba.com.cn/aurora/assets/737d98176f9edf2804f804b472315c658a432bb6.png");
  background-size: 392rpx 84rpx;
  background-repeat: no-repeat;
}

.photo-con .vertify-con .cancel-btn {
  width: 388rpx;
  height: 80rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 700rpx;
  background-image: url("https://yun.duiba.com.cn/aurora/assets/dd4bd03783bf7fec2b14af947b511e5093dd68e3.png");
  background-size: 388rpx 80rpx;
  background-repeat: no-repeat;
}

