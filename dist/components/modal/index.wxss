@keyframes fade-opacity {
  from {
    opacity: 0
  }

  to {
    opacity: 1
  }
}

.components-modal {
  animation: fade-opacity 0.3s linear both;
  display: flex;
  flex-direction: column;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  position: fixed;
  z-index: 12;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.5)
}

.components-modal .modal-close-box {
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0
}
